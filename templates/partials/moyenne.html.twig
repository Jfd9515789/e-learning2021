{% set NbRating = 0 %}

{% for comment in course.comments %}
    {% set  NbRating = NbRating + comment.rating %}
{% endfor %}

{% if  course.comments|length > 1 %}
    {% set moyenne = NbRating / course.comments|length %}
    {% for i in 1..5 %}
        {% if i <= moyenne %}
            <i class="icofont-star text-primary"></i>
        {% else %}
            <i class="icofont-star text-secondary"></i>
        {% endif %}
    {% endfor %}
{% endif %}